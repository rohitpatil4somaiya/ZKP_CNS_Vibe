# Copy this file to `.env` and fill in real values. Do NOT commit your real `.env` file.
# Backend (Flask / MongoDB)
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/zkp_demo?retryWrites=true&w=majority
MONGO_DBNAME=zkp_demo
FLASK_ENV=production
SECRET_KEY=replace-with-a-secure-random-value

# Mailer (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password_or_app_password
SMTP_SECURE=false # true if using SMTPS (port 465)
MAIL_FROM="ZKP CNS" <no-reply@example.com>
MAILER_PORT=5050

# Frontend (Vite - public runtime variables)
# When deploying frontend to Vercel, set VITE_API_URL and VITE_MAILER_URL there.
VITE_API_URL=https://your-backend.example.com
VITE_MAILER_URL=https://your-mailer.example.com
